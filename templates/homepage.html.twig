					<br><br>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h3>
						{{ record.titel }}
					</h3>
				</div>
				<div class="col-md-6">
					<p> **** </p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					{{ record.korte_omschrijving }}<br><br>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					 
					<button type="button" class="btn btn-success">
						Button
					</button>
					<br><br><br>
				</div>
				<div class="col-md-6">
				</div>
			</div>
		</div>
		{# {% endif %} #}
	</div>
	{% endfor %}
</div>
{% endblock %}


