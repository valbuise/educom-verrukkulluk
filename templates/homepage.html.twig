{# nu de block content op in de main pagina vullen #}


{% block content %}
	<div class="row">
    {% for record in data %}

		<div class="col-md-6 border shadow p-3 mb-5 bg-white rounded">
			<div class="row">
				<div class="col-md-12">
					<img src="{{ record.afbeelding }}" style="width: 100%; height: 340px;">
					<br><br>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h2 style="color: #6e8722">
						{{ record.titel }}
					</h2>
				</div>
				<div class="col-md-6">
					<span style="float: right">
					{{ (record.avgrating)|number_format(0) }}
					<i class="far fa-star" data-value="1"></i>
					<i class="far fa-star" data-value="2"></i>
					<i class="far fa-star" data-value="3"></i>
					<i class="far fa-star" data-value="4"></i>
					<i class="far fa-star" data-value="5"></i>
					</span>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					{{ record.korte_omschrijving }}<br><br>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">					
						<button type="submit" class="smulknop"><h5 style="color: white">
						<a href="index.php?gerecht_id={{ record.id }}&action=detail" data-value="{{ record.id }}" class="button">Smullen!</a></h5>
						</button>
				</div>
				<div class="col-md-6">
				<span style="float: right">
				<i class="fa fa-users">4</i><i class="fa fa-euro-sign">{{ (record.totalprice)|number_format(2) }}</i><i class="fa fa-fire">{{ record.totalcalories }}</i>
				</span>
				</div>
			</div>
		</div>
		{% endfor %}

	</div>
{% endblock %}


