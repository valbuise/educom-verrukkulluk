{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
<h1>Hallo Bram</h1>
{% endblock %}

{% block content %}
    {# Dit is commentaar #}

    {# Print #}
    <h1>Heading #1</h1>
    <h2>Heading #2</h2>
    <h3>Heading #3 t/m 5</h3>

    <h4>Dit is de template {{  title }}</h4>

{# Loop #}
    <ul>
    {% for record in data %}
        <li>
            <img src="{{ record.afbeelding }}" style="width: 100px; height: 70px;">

            {{ record.titel }}
            {# sub-loop #}
            <ul>
                {% for ingr in record.ingredient %}
                    <li>
                        <span {% if ingr.id == 2 %}style='color: #F00'{% endif %}>{{  ingr.naam }}</span>

                        {# if #}
                        {%  if ingr.id == 3 %}
                            <strong>Dit is ID 3!</strong>
                        {%  endif  %}
                    </li>
                {% endfor %}
            </ul>
        </li>
    {% endfor %}
    <ul>
     {# Dump #}
       <pre>
        {{ dump(data) }}
       </pre>

{% endblock %}
